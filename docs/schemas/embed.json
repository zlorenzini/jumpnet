{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://jumpnet/schemas/embed.json",
  "title": "EmbedRequest",
  "description": "Request body for POST /embed.",
  "type": "object",
  "required": ["text"],
  "additionalProperties": false,
  "properties": {
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 8192,
      "description": "Input text to embed."
    },
    "model": {
      "type": "string",
      "default": "jumpnet-stub-v0",
      "description": "Embedding model identifier."
    },
    "dimensions": {
      "type": "integer",
      "minimum": 8,
      "maximum": 2048,
      "default": 128,
      "description": "Number of output dimensions."
    }
  },
  "examples": [
    { "text": "round red bead", "dimensions": 128 }
  ]
}
